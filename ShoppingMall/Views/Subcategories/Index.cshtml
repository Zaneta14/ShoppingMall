@model ShoppingMall.ViewModels.SubcategoriesFilterViewModel

@{
    ViewData["Title"] = "Подкатегории";
}

<h1>Подкатегории</h1>

<p>
    <a asp-action="Create" class="admin">Додади</a>
</p>

<form asp-action="Index">
    <p>
        Категорија: <select asp-for="CategoryId" asp-items="@Model.Categories">
        <option value="">Сите</option></select>
        Име: <input type="text" asp-for="Name" />
        <input type="submit" value="Филтрирај"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subcategories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subcategories[0].CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subcategories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="admin">Уреди</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="admin">Избриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
