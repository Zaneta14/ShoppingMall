@model AppUser
@{
    ViewData["Title"] = "Кориснички профил на вработен";
}

<h2>@(Model != null && Model.EmployeeId != null ? "Промени" : "Нов") кориснички профил</h2>
<h4>Вработен: @ViewData["FullName"]</h4>
<hr />
    <form asp-action="EmployeeProfile" method="post">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <input name="EmployeeId" class="form-control" value="@(Model != null ? Model.EmployeeId : @ViewData["EmployeeId"])" hidden />
            </div>
            <div class="form-group">
                <label for="Id">ID на корисник</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="PasswordHash">Хеширана лозинка</label>
                <input asp-for="PasswordHash" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="Email">Email адреса</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Лозинка</label>
                <input name="Password" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="@(Model != null && Model.EmployeeId != null ? "Зачувај" : "Внеси нов")" />
            </div>
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
