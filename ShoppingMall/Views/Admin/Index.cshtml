@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Сите корисници";
}

<h2>Сите корисници</h2>
<a asp-action="EmployeeProfile" class="admin">Додади корисник</a>
<br />
<table class="table table-sm table-bordered">
    <tr>
        <th>ID на корисник</th>
        <th>Email адреса</th>
        <th>Улога</th>
        <th></th>
    </tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                @{
                    if (user.EmployeeId != null)
                    {
                        <a asp-controller="Admin" asp-action="EmployeeProfile" asp-route-employeeId="@user.EmployeeId">Промени</a>
                    }
                }
                |
                @{
                    if (user.EmployeeId != null)
                    {
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="admin">
                            <input type="submit" value="Избриши">
                        </form>
                    }
                }
            </td>
        </tr>
    }
</table>

