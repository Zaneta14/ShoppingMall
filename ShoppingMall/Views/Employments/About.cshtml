@model ShoppingMall.Models.Employee

@{
    ViewData["Title"] = "За мене";
}

<h1>За мене</h1>

<div class="row">
        <div class="card" style="width:550px;margin-right:6px;margin-bottom:6px">
            <div class="card-body" style="text-align:center;">
                <div class="card-img" style="text-align:center"><img src="@Model.PictureUrl" width="500" height="334" style="padding-bottom:10px" /></div>
                <h4 style="color:darkolivegreen"><b>@Model.FullName</b></h4>
                <p><b>@Model.Email</b></p>
                @if (Model.CVUrl != null)
                {
                    <p>
                        CV:
                        <a href="@("/employeeCVs/" + Model.CVUrl)" target="_blank">
                            @Model.CVUrl
                        </a>
                    </p>
                }
                    </div>
        </div>
    
</div>